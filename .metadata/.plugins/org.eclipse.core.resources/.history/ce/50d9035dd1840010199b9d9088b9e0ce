			    System.out.println("ÏõêÏÇ∞ÏßÄ: " + origin);
			    System.out.println("Ìñ•Í∏∞: " + fragrance);
			    System.out.println("Ìùô: " + soilType);
			    System.out.println("ÌñáÎπõ: " + sunLight);
			    System.out.println("Î¨º: " + water);
			    System.out.println("Í¥ÄÎ¶¨ ÎÇúÏù¥ÎèÑ: " + maintenance);
